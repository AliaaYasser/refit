
@{
    ViewBag.Title = "editePost";
    Layout = "~/Views/Shared/dashboardHeader.cshtml";
}



<div class="panel panel-default">
    <div class="panel-heading">
        Edit Post
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">

                <form role="form"> 
                    
                        <div class="form-group">
                            @Html.Label("post title")
                            @Html.TextBox("title", "title", new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            @Html.Label("descrption")
                            @Html.TextArea("descrption", "descrption", new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <img id="blah" src="#" alt="your image" />

                        </div>
                        <div class="form-group">
                            <label>media</label>
                            <input type="file"
                                   id="avatar" name="avatar"
                                   accept="image/*, video/*" onchange="readURL(this);">

                        </div>



                        <div class="checkbox">
                            <label>
                                <input type="checkbox" value="" />is Active post?
                            </label>
                        </div>




                        <button type="submit" class="btn btn-default">Edit</button>
                   


                </form>
            </div>
        </div>

    </div>
</div>
