@model WebApplication17.Models.News

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/dashboardHeader.cshtml";
}

<h2>Details</h2>

<div>
    <h4>News</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            @if (Model.mediaPath != null)
            {
                if (Model.mediaPath.Contains("jpg") || Model.mediaPath.Contains("gif") || Model.mediaPath.Contains("png") || Model.mediaPath.Contains("jpeg"))
                {
                    <img src="Model.mediaPath" style="height:110px;width:100px" />
                }
                else
                {
                    <video style="max-width:100px;height:120px" controls>
                        <source src="@Model.mediaPath" type="video/mp4">
                        <source src="@Model.mediaPath" type="video/3gpp">
                        <source src="@Model.mediaPath" type="video/m4v">
                        <source src="@Model.mediaPath" type="video/mpeg">
                        <source src="@Model.mediaPath" type="video/ogg">
                        <source src="@Model.mediaPath" type="video/webm">
                        Your browser does not support the video tag.
                    </video>

                }}

            else {  <p>No media</p> }

        </dt>

        <dd>
            @Html.DisplayFor(model => model.mediaPath)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.isActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isActive)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
