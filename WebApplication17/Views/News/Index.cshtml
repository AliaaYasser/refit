@model IEnumerable<WebApplication17.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/dashboardHeader.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h2> All News</h2>
        @Html.ActionLink("Add News", "Create", "News", new { @class = "btn btn-danger" })
        
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th> @Html.DisplayNameFor(model => model.title) </th>
                                <th>   @Html.DisplayNameFor(model => model.description)</th>
                                <th> @Html.DisplayNameFor(model => model.mediaPath)</th>
                                <th>  @Html.DisplayNameFor(model => model.isActive)</th>

                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="even gradeC">
                                    <td>
                                       @item.title
                                    </td>
                                    <td style="max-width:200px; max-height:120;"> @Html.DisplayFor(modelItem => item.description)</td>

                                    <td>
                                        @if (item.mediaPath != null)
                                        {
                                            if (item.mediaPath.Contains("jpg") || item.mediaPath.Contains("gif") || item.mediaPath.Contains("png") || item.mediaPath.Contains("jpeg"))
                                            {
                                                <img src=" @Html.DisplayFor(modelItem => item.mediaPath)" style="height:110px;width:100px" />
                                            }
                                            else
                                            {
                                                <video style="max-width:100px;height:120px" controls>
                                                    <source src="@item.mediaPath" type="video/mp4">
                                                    <source src="@item.mediaPath" type="video/3gpp">
                                                    <source src="@item.mediaPath" type="video/m4v">
                                                    <source src="@item.mediaPath" type="video/mpeg">
                                                    <source src="@item.mediaPath" type="video/ogg">
                                                    <source src="@item.mediaPath" type="video/webm">
                                                    Your browser does not support the video tag.
                                                </video>

                                            }
                                        }
                                        else
                                        {
                                            <p>no media</p>}
                                    </td>
                                    <td>    @Html.DisplayFor(modelItem => item.isActive)</td>

                                    <td>

                                        <div class="btn-group">
                                            
                                            <button data-toggle="dropdown" class="btn btn-danger "><span class="caret"> </span> Actions</button>
                                            <ul class="dropdown-menu">
                                                <li> @Html.ActionLink("Edit", "Edit", new { id = item.id })</li>
                                                <li> @Html.ActionLink("Details", "Details", new { id = item.id })</li>
                                                <li> @Html.ActionLink("Delete", "Delete", new { id = item.id })</li>

                                            </ul>
                                        </div>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<!--End Advanced Tables -->
